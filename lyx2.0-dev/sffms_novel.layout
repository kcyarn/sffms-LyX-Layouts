#% Do not delete the line below; configure depends on this
#  \DeclareLaTeXClass[sffms]{sffms (Novel)}
# sffms textclass definition file
# Author: K. Chester <kcyarn7@gmail.com>
# Note: For LyX 2.0 only.

Format 11
Columns            1
Sides              1
SecNumDepth        -1
TocDepth           1
DefaultStyle       Standard
PageStyle          Fancy

# Set line spacing
Provides SetSpace  2


ClassOptions
	FontSize             12
	PageStyle            empty|plain|headings|fancy|standard
	Other                "courier, novel"
End

Input stdcounters.inc

Style Title
	Margin		Static
	LatexType	Command
	Category	FrontMatter
	InTitle		0
	Align		Center
	LatexName	title
	LabelType	No_Label
	InPreamble	1
End

Style Author
	Margin		Static
	LatexType	Command
	Category	FrontMatter
	InTitle		0
	Align		Center
	LatexName	author
	LabelType	No_Label
	InPreamble	1
End

Style Surname
	Margin		Static
	LatexType	Command
	Category	FrontMatter
	InTitle		0
	Align		Center
	LatexName	surname
	LabelType	No_Label
	InPreamble	1
End

Style Address
	Margin		Static
	LatexType	Command
	Category	FrontMatter
	InTitle		0
	Align		Center
	LatexName	address
	LabelType	No_Label
	InPreamble	1
End

Style Runningtitle
	Margin		Static
	LatexType	Command
	Category	FrontMatter
	InTitle		0
	Align		Center
	LatexName	runningtitle
	LabelType	No_Label
	InPreamble	1
End

Style Wordcount
	Margin		Static
	LatexType	Command
	Category	FrontMatter
	InTitle		0
	Align		Center
	LatexName	wordcount
	LabelType	No_Label
	InPreamble	1
End

Style Chapter
	Margin                Static
	Category              Section
	LabelString	          "Chapter \thechapter"
	LabelStringAppendix   "Appendix \thechapter"
	LabelType	            Counter
	LabelCounter	        chapter
	TocLevel              0
	LatexType             Command
	LatexName             chapter
	NeedProtect           1
	NextNoIndent          1
	ParSkip               0.4
	TopSep                4
	BottomSep             0.8
	ParSep                0.8
	Align                 Block
	OptionalArgs          1
	Font
	  Series              Bold
	  Size                larger
	EndFont
End

Style Chapter*
	CopyStyle             Chapter
	Category              Unnumbered
	Margin                Static
	LatexName             chapter*
	LabelType             No_Label
	LabelCounter	      ""	
	OptionalArgs          0
End

Style Standard
	Category              MainText
	Margin                Static
	LatexType             Paragraph
	LatexName             dummy
	ParIndent             MM
	ParSkip               0.4
	Align                 Block
	AlignPossible         Block, Left, Right, Center
	LabelType             No_Label
End

Preamble
	\usepackage{indentfirst}
EndPreamble
